<div class="row">
  <div class="col s12 m8 l8 offset-m2 offset-l2">
    <h1>Shorten your URL!</h1>
    <%= render "shorteners/form" %>
  </div>
</div>

<% if params[:link] %>
<div class="row">
  <div class="col s12 m8 l8 offset-m2 offset-l2">

    <div class="link">
      <span>Copy your link:</span> <strong><%= @link %></strong>
    </div>

  </div>
</div>
<% end %>
